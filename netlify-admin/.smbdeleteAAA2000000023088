        // ì•Œë¦¼ í´ë¦­ í•¸ë“¤ëŸ¬
        function handleNotificationClick(id, url) {
            console.log('Notification clicked:', id);
            if (url && url !== 'null' && url !== '') {
                window.location.href = url;
            }
        }

        // í•„í„° íƒ­ í´ë¦­ í•¸ë“¤ëŸ¬
        function setupFilterTabs() {
            const tabs = document.querySelectorAll('.filter-tab');
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // ëª¨ë“  íƒ­ ë¹„í™œì„±í™”
                    tabs.forEach(t => t.classList.remove('active'));
                    // ì„ íƒëœ íƒ­ í™œì„±í™”
                    this.classList.add('active');
                    // í•„í„° ì ìš©
                    currentFilter = this.dataset.type;
                    renderNotifications();
                });
            });
        }

        // ì‹¤ì œ APIì—ì„œ ì•Œë¦¼ ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
        let notifications = [];

        async function fetchNotifications() {
            try {
                const response = await fetch(FUNCTION_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        action: 'getNotifications',
                        type: currentFilter === 'all' ? null : currentFilter,
                        limit: 50,
                        offset: 0
                    })
                });

                const result = await response.json();

                if (result.success && result.notifications) {
                    notifications = result.notifications;
                    console.log('APIì—ì„œ ì•Œë¦¼ ë°ì´í„° ë¡œë“œ ì„±ê³µ:', result.notifications.length, 'ê°œ');
                } else {
                    console.warn('API ì‘ë‹µ ì‹¤íŒ¨, ìƒ˜í”Œ ë°ì´í„° ì‚¬ìš©');
                    notifications = sampleNotifications;
                }
            } catch (error) {
                console.error('API í˜¸ì¶œ ì‹¤íŒ¨, ìƒ˜í”Œ ë°ì´í„° ì‚¬ìš©:', error);
                notifications = sampleNotifications;
            }
        }

        // ì•Œë¦¼ ëª©ë¡ ë Œë”ë§ (ìˆ˜ì •)
        function renderNotifications() {
